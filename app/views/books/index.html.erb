<div class="is-divider"></div>

<div class="card-table">
  <div class="container">
    <div class="index">
      <div class="column is-6">
        <table class="table  is-striped">
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td width="5%"><i class="fa fa-bell-o"></i></td>
              <td class="subtitle is-6"><%= book.title %></td>
              <% if book.borrow %>
                <td class="level-right"><%= link_to 'Show', book, :class => "button is-warning" %></td>
              <% else %>
                <p>book is borrowed</p>
              <% end %>
            </tr> 
          <% end %>                           
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>